.ikf-vodpic {
  position: relative;
  width: 100%;
  height: 520rpx;
  overflow: hidden;
}

.ikf-vodpic .blur{position: absolute;left: 0;top: 0;height: 520rpx;right: 0;filter: blur(30px);background-repeat: no-repeat;background-size: cover;z-index: 1;}

.ikf-vodpic .pic {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 300rpx;
    height: 450rpx;
    z-index: 2;
}

.ikf-detail {
    padding: 10rpx 20rpx;
    position: relative;
}

.ikf-detail .detail {
    font-size: 24rpx;
    padding-bottom: 10rpx;
}

.ikf-detail .detail .title {
    max-width: 70%;
    font-size: 48rpx;
    font-weight: 400;
    padding-top: 10rpx;
    margin-bottom: 10rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
}

.ikf-detail .detail .list {
    height: 40rpx;
    line-height: 40rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #999;
}

.ikf-detail .detail .list .yellow {
    color: #f83;
}

.ikf-detail .gold {position: absolute;right: 20rpx;top: 20rpx;width: 150rpx;height: 150rpx;box-shadow: 0 0 15px 5px rgba(0,0,0,.05);text-align: center;}
.ikf-detail .gold .title{font-size: 18rpx;color: #999;}
.ikf-detail .gold .score{margin: -10rpx 0;display: block;font-size: 32px;}
.ikf-detail .gold .scoreb{margin: 15rpx 10rpx 0;background-color: #f0f0f0;height: 10rpx;}
.ikf-detail .gold .scorew{height: 10rpx;background-color: #f60;}